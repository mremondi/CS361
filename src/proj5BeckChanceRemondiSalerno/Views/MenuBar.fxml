<?import javafx.scene.control.*?>
<MenuBar xmlns="http://javafx.com/javafx/8.0.65"
         xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="proj5BeckChanceRemondiSalerno.Controllers.MenuBarController">
    <Menu text="File">
        <MenuItem accelerator="Shortcut+Q" onAction="#handleExit" text="Exit"/>
    </Menu>
    <Menu text="Edit">
        <MenuItem accelerator="Shortcut+A" onAction="#handleSelectAll" text="Select All"/>
        <MenuItem accelerator="Shortcut+Delete" onAction="#handleDelete" text="Delete"/>
        <MenuItem accelerator="Shortcut+G" onAction="#handleGroup" text="Group"/>
        <MenuItem accelerator="Shortcut+U" onAction="#handleUngroup" text="Ungroup"/>
        <MenuItem accelerator="Shortcut+U" onAction="#handleUndo" text="Undo"/>
        <MenuItem accelerator="Shortcut+U" onAction="#handleRedo" text="Redo"/>
    </Menu>
    <Menu text="Actions">
        <MenuItem accelerator="Shortcut+P" onAction="#handlePlayMidi" text="Play"/>
        <MenuItem accelerator="Shortcut+S" onAction="#handleStopMusic" text="Stop"/>
    </Menu>
</MenuBar>